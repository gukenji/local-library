extends layout

block content
  h1= title

  if author_list.length
    ul
      each author in author_list
        li
          a(href=author.url) #{author.name}
          |  (#{author.date_of_birth? author.date_birth_formatted : "" } - #{author.date_of_death? author.date_death_formatted: "" })
  else
    p There are no authors.
